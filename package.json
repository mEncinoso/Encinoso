{
  "name": "exposicionencinoso",
  "version": "1.0.0",
  "description": "ExposicionEncinoso",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "build": "run-p build:*",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "build:html": "posthtml -c posthtml.json",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "build:js": "webpack --mode=production",
    "watch": "run-p serve watch:*",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mEncinoso/ExposicionEncinoso.git"
  },
  "author": "mEncinoso",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mEncinoso/ExposicionEncinoso/issues"
  },
  "homepage": "https://github.com/mEncinoso/ExposicionEncinoso#readme",
  "dependencies": {
    "postcss-scss": "^3.0.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.1",
    "autoprefixer": "^10.0.2",
    "babel-loader": "^8.2.1",
    "browser-sync": "^2.26.13",
    "eslint": "^7.13.0",
    "eslint-loader": "^4.0.2",
    "eslint-webpack-plugin": "^2.3.0",
    "htmlnano": "^0.2.7",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^8.2.0",
    "posthtml": "^0.13.4",
    "posthtml-cli": "^0.8.0",
    "posthtml-modules": "^0.6.2",
    "stylelint": "^13.7.2",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  }
}
